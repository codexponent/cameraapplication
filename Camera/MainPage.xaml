    xmlns:local="using:Camera"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <CaptureElement x:Name="Capture" HorizontalAlignment="Left" Height="284" Margin="115,403,0,0" VerticalAlignment="Top" Width="340"/>
        <Button x:Name="btnView" Content="View" HorizontalAlignment="Left" Margin="686,403,0,0" VerticalAlignment="Top" Click="btnViewHandler"/>
